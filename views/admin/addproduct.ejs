    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                    <div>
                        <form action="/admin/products/addproduct" method="post" enctype="multipart/form-data" id="prod_form">
                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Add product</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                      
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here" class="form-control" id="product_name" name="pname">
                                <div style="display: none;" id="error1"  class="alert alert-danger" > </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="description" id="desc"></textarea>
                                <div style="display: none;" id="error2"  class="alert alert-danger" > </div>

                            </div>
                            <div class="row">
                                <!-- <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="number" class="form-control" name="reg_price" id="regprice">
                                        </div>
                                    </div>
                                    <div style="display: none;" id="error3"  class="alert alert-danger" > </div>
                                </div> -->
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">sales price</label>
                                        <input placeholder="$" type="number" class="form-control" name="sales_price" id="saleprice"> 
                                    </div>
                                    <div style="display: none;" id="error4"  class="alert alert-danger" > </div>
                                </div>
                            </div>  
                            <p><div style="display: none;" id="compare_err" class="alert alert-danger"></div></p>
                            <div class="mb-4">
                                <label for="small_size" class="form-label">Small Quantity</label>
                                <input type="number" placeholder="Type here" class="form-control" id="small_size" name="small_qty">
                                <div style="display: none;" id="error5"  class="alert alert-danger" > </div>
                            </div>
                            <div class="mb-4">
                                <label for="medium_size" class="form-label">Medium Quantity</label>
                                <input type="number" placeholder="Type here" class="form-control" id="medium_size" name="medium_qty">
                                <div style="display: none;" id="error6"  class="alert alert-danger" > </div>

                            </div>
                            <div class="mb-4">
                                <label for="large_size" class="form-label">Large Quantity</label>
                                <input type="number" placeholder="Type here" class="form-control" id="large_size" name="large_qty">
                                <div style="display: none;" id="error7"  class="alert alert-danger" > </div>

                            </div>    
    
                    </div>
                </div> <!-- card end// -->
                
            </div>
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-upload">
                            <div class="image-previewconatiner" id="image-preview"></div>
                            <input type='file'  accept='image/*' name='Images' id='fileInput' class="form-control" onchange="previewImage(event)" multiple/>
                        </div>
                        <div style="display: none;" id="error8"  class="alert alert-danger" > </div>

                    </div>
                </div> <!-- card end// -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Organization</h4>
                    </div>
                    <div class="card-body">
                        <div class="row gx-2">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label">Category</label>
                                <select class="form-select" name="cat" id="catname">
                                    <%catdetail.forEach((cat)=>{%>
                                        <option value="<%=cat._id%>" id="catoption"><%=cat.name%></option>
                                    <%})%>

                                </select>
                               
                            </div>
                        </div> <!-- row.// -->
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>
    </form>
    </section> <!-- content-main end// -->
