    <script>
        async function acceptReturn(oid,pid,uid){
            const url=`/admin/accept-return?oid=${oid}&pid=${pid}&uid=${uid}`
            const res=await fetch(url)
            if(res.ok){
                window.location.reload()
            }
        }
        async function reject (oid,pid){
            const url=`/admin/reject-return?oid=${oid}&pid=${pid}`
            const res=await fetch(url)
            if(res.ok){
                window.location.reload()
            }
        }
    </script>
  
