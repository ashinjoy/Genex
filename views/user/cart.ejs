<%-include("userlayout/header.ejs")%>
<div class="breadcrumbs_area">
    <div class="container">   
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                   <h3>cart</h3>
                    <ul>
                        <li><a href="">home</a></li>
                        <li>Shopping Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>         
</div>
<!--breadcrumbs area end-->

 <!--shopping cart area start -->

 
<div class="shopping_cart_area">
    <div class="container">  
        <form action="/checkout"> 
            <div class="row">
                <div class="col-12">
                    <%if(locals.message){%>
                       <div class="text-center"> <b><%=message%></b></div>
                        <%}%>
                    <div class="table_desc">
                        <div class="cart_page table-responsive">
                            
                            <%if(locals.carts) {%>
                                <%if(locals.carts.length>0){%>
                            <table>
                        <thead>
                            <tr>
                                <th class="product_thumb">Image</th>
                                <th class="product_name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product_quantity">Quantity</th>
                                <th class="">Total</th>
                                <th class="product_remove">Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            
                               <%locals.carts.forEach((product,index)=>{%>
                                    <tr>
                                         <td class="product_thumb"><a href="#"><img src="/assets/<%=product.productid.img[0]%>" alt=""></a></td>
                                         <td class="product_name"><a href="#" ><%=product.productid.name%></a></td>
                                         <td class="product-price" id="salesprice<%=index%>"><%=product.productid.salesprice%></td>
                                         <td class="product_quantity"><label></label> <input min="1" max="100"  type="number" value="<%=product.qty%>" id="qty<%=index%>" onchange="changeTotal('<%=index%>','<%=product._id%>','<%=product.productid._id%>')"></td>
                                         <td class="product_total" id="totalprice<%=index%>" ><%=product.qty*product.productid.salesprice%></td>
                                        <td class="product_remove"><button type="button" onclick="deleteitem('<%=product._id%>')"><i class="fa fa-trash-o"></i></button></td>

                                     </tr>
                               <% })%>
                            </tbody>
                        </table>   
                            </div>  
                            <div class="cart_submit">
                                <button type="submit">update cart</button>
                            </div>      
                        </div>
                     </div>
                 </div>
                 <!--coupon code area start-->
                <div class="coupon_area">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="coupon_code left">
                                <h3>Coupon</h3>
                                <div class="coupon_inner">   
                                    <p>Enter your coupon code if you have one.</p>                                
                                    <input placeholder="Coupon code" type="text">
                                    <button type="submit">Apply coupon</button>
                                </div>    
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="coupon_code right">
                                <h3>Cart Totals</h3>
                                <div class="coupon_inner">
                                   <div class="cart_subtotal">
                                       <p>Subtotal</p>
                                       <p class="cart_amount">£215.00</p>
                                   </div>
                                   <div class="cart_subtotal ">
                                       <p>Shipping</p>
                                       <p class="cart_amount"><span>Flat Rate:</span> £255.00</p>
                                   </div>
                                   <a href="#">Calculate shipping</a>
    
                                   <div class="cart_subtotal">
                                       <p>Total</p>
                                       <p class="cart_amount" id="maintotal">£215.00</p>
                                   </div>
                                   <div class="checkout_btn">
                                       <a href="/checkout">Proceed to Checkout</a>
                                   </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--coupon code area end-->
            </form> 
        </div>     
    </div>
                                
                            <%}%>
 <%}%>
                                

                      
 <!--shopping cart area end -->
